<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.flyingpig.mapper.AttendanceAppealMapper" >

    <insert id="addAttendanceAppeal">
        insert into attendanceappeal (userId, course_id, reason, appeal_begin_time, appeal_end_time, status,leaveCourseName)
        values (#{studentId},#{courseId},#{reason},#{appealBeginTime},#{appealEndTime},#{status},#{leaveCourseName})
    </insert>
    <update id="updateAttendanceAppealStatus">
        update attendanceappeal set status=#{status} where id=#{attendanceAppealId};
    </update>
    <select id="getByStudentId" resultType="com.flyingpig.dataobject.entity.AttendanceAppeal">
        select * from attendanceappeal where userId=#{studentId}
    </select>
    <select id="getByCourseId" resultType="com.flyingpig.dataobject.entity.AttendanceAppeal">
        select * from attendanceappeal where course_id=#{courseId}
    </select>
    <select id="getById" resultType="com.flyingpig.dataobject.entity.AttendanceAppeal">
        select * from attendanceappeal where id=#{attendanceAppealId}
    </select>
</mapper>