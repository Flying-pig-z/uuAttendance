<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.flyingpig.mapper.CounsellorMapper" >
    <select id="getByUsernameAndPassword" resultType="com.flyingpig.dataobject.entity.Counsellor">
        select id,no,password,name,gender from counsellor
            where no=#{no} and password=#{password}
    </select>
    <select id="getById" resultType="com.flyingpig.dataobject.entity.Counsellor">
        select * from counsellor
        where id=#{id}
    </select>
</mapper>