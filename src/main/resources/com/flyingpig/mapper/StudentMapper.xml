<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.flyingpig.mapper.StudentMapper" >
    <select id="getByUsernameAndPassword" resultType="com.flyingpig.dataobject.entity.Student">
        select id,no,password,name,gender,grade,clas_s,major,college from student
            where no=#{no} and password=#{password}
    </select>
    <select id="getByGradeAndMajorAndClass" resultType="com.flyingpig.dataobject.entity.Student">
        select * from student
        <where>
            <if test="grade!=null">AND grade=#{grade}</if>
            <if test="major!=null">AND major=#{major}</if>
            <if test="Class!=null">AND clas_s=#{Class}</if>
        </where>
    </select>
    <select id="getByCollege" resultType="com.flyingpig.dataobject.entity.Student">
        select * from student
        where  college=#{college}
    </select>
    <select id="getByNo" resultType="com.flyingpig.dataobject.entity.Student">
        select * from student where no=#{studentNo}
    </select>
    <select id="getStudentInfoById" resultType="com.flyingpig.dataobject.dto.StudentInfo">
        select id,no,name,gender,grade,clas_s,major,college from student
        where id=#{id}
    </select>
</mapper>