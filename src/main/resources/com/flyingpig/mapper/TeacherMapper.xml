<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.flyingpig.mapper.TeacherMapper" >
    <select id="getByUsernameAndPassword" resultType="com.flyingpig.dataobject.entity.Teacher">
        select id,no,password,name,gender from teacher
        where no=#{no} and password=#{password}
    </select>
    <select id="getIdByName" resultType="java.lang.Integer">
        select id from teacher
        where name=#{teacherName}
    </select>
</mapper>